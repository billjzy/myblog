doctype html
html
  head
    meta(charset='utf-8')
    title=title
    link(rel="stylesheet" , href="/stylesheets/bootstrap.min.css")
    link(rel="stylesheet" , href="/stylesheets/style.css")
    
  body
    nav.navbar.navbar-default
      .row
        .navbar-header
          button.navbar-toggle.collapsed(type="button",data-target="#settings",data-toggle="collapse", aria-expand="false", aria-control="navbar")
            span.sr-only Toggle nav
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') NJIT
       
        div#settings.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active 
              a(href='/') Home
            li 
              a(href='#') About
            if(current_user)
              li
                a(href="#") Blog
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle="dropdown") #{current_user.username}
                  b.caret
                ul.dropdown-menu
                  li
                    a(href='#') Message
                  li 
                    a(href='') Profile
                  li
                    a(href='') Follow
                  li.divider
                  li
                  a(href='/signout') Sign Out
            else 
              li 
                a(href="/signin") Sign in
              li 
                a(href="/register") Sign up
          form.navbar-form(role="search")
            input.form-control(type='text', placeholder='search')
      
    

    block content

    script(src="javascripts/jquery.min.js")
    script(src="javascripts/bootstrap.min.js")
  

   